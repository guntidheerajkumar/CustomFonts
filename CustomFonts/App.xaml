<?xml version="1.0" encoding="utf-8"?>
<Application
	xmlns="http://xamarin.com/schemas/2014/forms"
	xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
	x:Class="CustomFonts.App">
	<Application.Resources>
		<ResourceDictionary>
			<Style
				x:Name="LabelStyle"
				TargetType="Label">
				<Setter
					Property="Label.FontFamily">
					<Setter.Value>
						<OnPlatform
							x:TypeArguments="x:String">
							<OnPlatform.Android>Billy Ohio.ttf#Billy Ohio
							</OnPlatform.Android>
							<OnPlatform.iOS>Billy Ohio</OnPlatform.iOS>
						</OnPlatform>
					</Setter.Value>
				</Setter>
			</Style>
		</ResourceDictionary>
	</Application.Resources>
</Application>